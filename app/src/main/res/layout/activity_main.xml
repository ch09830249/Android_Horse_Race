<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFED97">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="apple"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#FF0000">
        </TextView>
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="banana"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="	#A6A600">
        </TextView>
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="orange"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#FF8000">
        </TextView>
        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="pineapple"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#82D900">
        </TextView>
        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="賭金餘額"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#000000">
        </TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_ratio1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="下注金額(美元)"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_ratio2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="18sp"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textColor="#000000">
                </TextView>
                <TextView
                    android:id="@+id/txt_ratio3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:textColor="#000000">
                </TextView>
                <TextView
                    android:id="@+id/txt_ratio4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="30"
                    android:textSize="18sp"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:textColor="#000000">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="10000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="#7E3D76">
        </TextView>
        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:hint="上限10美元"
            android:textColorHint="#B9B973"
            android:textColor="#000000"
            android:inputType="number"
            android:background="@drawable/bg_square"
            android:maxLines="1"
            android:layout_margin="5dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="馬匹賠率"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/txt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="投注馬匹"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#000000">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/txt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="apple:"
                    android:gravity="center"
                    android:textColor="#7E3D76">
                </TextView>
                <TextView
                    android:id="@+id/ratio1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FF0000"
                    android:text="2">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="banana:"
                    android:gravity="center"
                    android:textColor="#7E3D76">
                </TextView>
                <TextView
                    android:id="@+id/ratio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#A6A600">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="orange:"
                    android:gravity="center"
                    android:textColor="#7E3D76">
                </TextView>
                <TextView
                    android:id="@+id/ratio3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#FF8000">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="pineapple:"
                    android:gravity="center"
                    android:textColor="#7E3D76">
                </TextView>
                <TextView
                    android:id="@+id/ratio4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="#82D900">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rdb1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="apple"
                android:checked="true"
                android:layout_weight="1"
                android:textColor="#7E3D76"/>
            <RadioButton
                android:id="@+id/rdb2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="banana"
                android:layout_weight="1"
                android:textColor="#7E3D76"/>
            <RadioButton
                android:id="@+id/rdb3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="orange"
                android:layout_weight="1"
                android:textColor="#7E3D76"/>
            <RadioButton
                android:id="@+id/rdb4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="pineapple"
                android:layout_weight="1"
                android:textColor="#7E3D76"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:text="Start Game"
        android:textColor="#CE000000"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:text="History Record"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:text="Reset"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:text="Game Over"
        android:textColor="#000000"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:textAllCaps="false" />


</LinearLayout>